<Window x:Class="ExcelParse2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="表格生成工具" Height="669.45" Width="803" 
        Loaded="Window_Loaded"
        Unloaded="Window_Unloaded">
    <Grid Margin="0,0,2,3">
        <GroupBox Header="生成代码" HorizontalAlignment="Left" Margin="4,4,0,0" VerticalAlignment="Top" Height="287" Width="575" FontSize="16"/>
        <Button x:Name="m_btn10" Content="加载数据定义" HorizontalAlignment="Left" Height="29" Margin="22,128,0,0" VerticalAlignment="Top" Width="100" Click="OnClick_LoadDataDef"/>
        <Button x:Name="m_btn9" Content="加载配置表格" HorizontalAlignment="Left" Height="29" Margin="127,128,0,0" VerticalAlignment="Top" Width="100" Click="OnClick_LoadConfigData"/>
        <Button x:Name="m_btn8" Content="加载全部表格" HorizontalAlignment="Left" Height="29" Margin="127,162,0,0" VerticalAlignment="Top" Width="100" Click="OnClick_LoadAllData"/>
        <Button x:Name="m_btn7" Content="生成服务器数据" HorizontalAlignment="Left" Height="29" Margin="244,129,0,0" VerticalAlignment="Top" Width="139" Click="OnClick_MakeServerData"/>
        <Button x:Name="m_btn6" Content="生成客户端数据" HorizontalAlignment="Left" Height="29" Margin="244,163,0,0" VerticalAlignment="Top" Width="139" Click="OnClick_MakeClientData"/>
        <Button x:Name="m_btn5" Content="生成服务器读取代码" HorizontalAlignment="Left" Height="29" Margin="244,196,0,0" VerticalAlignment="Top" Width="139" Click="OnClick_MakeServerCode"/>
        <Button x:Name="m_btn4" Content="生成客户端读取代码" HorizontalAlignment="Left" Height="29" Margin="244,230,0,0" VerticalAlignment="Top" Width="139" Click="OnClick_MakeClientCode"/>
        <Button x:Name="m_btn3" Content="一键生成指定数据" HorizontalAlignment="Left" Height="29" Margin="417,129,0,0" VerticalAlignment="Top" Width="144" Click="OnekeyMake_SelectData"/>
        <Button x:Name="m_btn2" Content="一键生成全部数据" HorizontalAlignment="Left" Height="29" Margin="417,163,0,0" VerticalAlignment="Top" Width="144" Click="OnekeyMake_Data"/>
        <Button x:Name="m_btn1" Content="一键生成全部数据和代码" HorizontalAlignment="Left" Height="29" Margin="417,196,0,0" VerticalAlignment="Top" Width="144" Click="OnekeyMake_DataAndCode"/>
        <CheckBox x:Name="m_btn11" Content="是否程序使用" HorizontalAlignment="Left" Margin="19,52,0,0" VerticalAlignment="Top" Height="35" Width="145" Click="OnCheckProgram" />
        <ListBox x:Name="mOutputText" HorizontalAlignment="Left" Height="252" Margin="9,331,0,0" VerticalAlignment="Top" Width="773"/>
        <Label Content="输出信息" HorizontalAlignment="Left" Height="23" Margin="10,303,0,0" VerticalAlignment="Top" Width="214"/>
        <Button Content="清信息" HorizontalAlignment="Left" Height="23" Margin="736,593,0,0" VerticalAlignment="Top" Width="47" Click="OnClick_ClearText"/>
        <ProgressBar x:Name="m_pro" HorizontalAlignment="Left" Height="23" Margin="7,593,0,0" VerticalAlignment="Top" Width="706"/>
        <ComboBox x:Name="m_combox1" HorizontalAlignment="Left" Margin="417,44,0,0" Width="144" Height="30" SelectedIndex="0" FontSize="18" VerticalAlignment="Top" SelectionChanged="m_combox1_SelectionChanged">
           <ComboBoxItem Content="excel" FontSize="18"/>
           <ComboBoxItem Content="csv" FontSize="18"/>
           <ComboBoxItem Content="txt" FontSize="18"/>
        </ComboBox>
        <Label Content="加载数据类型：" HorizontalAlignment="Left" Margin="323,46,0,0" VerticalAlignment="Top"/>
        <GroupBox Header="生成数据" HorizontalAlignment="Left" Margin="584,3,0,0" VerticalAlignment="Top" Height="287" Width="198" FontSize="16"/>
        <Button x:Name="m_btn12" Content="生成csv文件" HorizontalAlignment="Left" Margin="610,165,0,0" VerticalAlignment="Top" Width="148" Click="Button_Click" Height="44" FontSize="18"/>
        <Button x:Name="m_btn13" Content="生成txt文件" HorizontalAlignment="Left" Margin="610,78,0,0" VerticalAlignment="Top" Width="148" Height="44" Click="Button_Click_1" FontSize="18"/>
    </Grid>
</Window>
