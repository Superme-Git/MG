<Window x:Class="ResourceCheck.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoadingWindow" Height="100" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" ScrollViewer.VerticalScrollBarVisibility="Disabled" BorderThickness="2" ShowInTaskbar="False" WindowStyle="None">
    <Window.Background>
        <SolidColorBrush Color="White"/>
    </Window.Background>
    <Grid>
        <Grid HorizontalAlignment="Center" Height="100" VerticalAlignment="Center" Width="400">
            <Rectangle Fill="#FF86B6C1" Stroke="Black" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Height="100" Margin="0"/>
            <Image x:Name="ImgIcon" HorizontalAlignment="Left" Height="80" Margin="10,10,0,0" VerticalAlignment="Top" Width="80"/>
            <Label Content="Now Loading ..." HorizontalAlignment="Left" Height="40" Margin="100,30,0,0" VerticalAlignment="Top" Width="290" FontSize="24"/>
        </Grid>

    </Grid>
</Window>
