<Window x:Name="MainWindow0" x:Class="ResourceCheck.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ResourceCheck" Height="720" Width="1280" Closed="Window_Closed" WindowStartupLocation="CenterScreen" Background="#FF64809B" Foreground="White" MinWidth="800" MinHeight="500">
    <Grid x:Name="GDBG">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="GDLeft" HorizontalAlignment="Left" Margin="0" Width="220">
            <Frame Content="" HorizontalAlignment="Left" Width="220" Margin="0" Background="#FFB48080"/>
            <Button x:Name="BtnTable" Content="Table" HorizontalAlignment="Left" Height="90" Margin="10,10,0,0" VerticalAlignment="Top" Width="180" Background="#FFDDDDDD" Opacity="0.8" FontSize="32" Cursor="Hand" Click="BtnTable_Click"/>
            <Button x:Name="BtnEffect" Content="Effect" HorizontalAlignment="Left" Height="90" Margin="10,110,0,0" VerticalAlignment="Top" Width="180" Background="#FFDDDDDD" Opacity="0.8" FontSize="32" Cursor="Hand" Click="BtnEffect_Click"/>
            <Button x:Name="BtnParticle" Content="Particle" HorizontalAlignment="Left" Height="90" Margin="10,210,0,0" VerticalAlignment="Top" Width="180" Background="#FFDDDDDD" Opacity="0.8" FontSize="32" Cursor="Hand" Click="BtnParticle_Click"/>
            <Button x:Name="BtnAnimation" HorizontalAlignment="Left" Height="90" Margin="10,310,0,0" VerticalAlignment="Top" Width="180" Background="#FFDDDDDD" Opacity="0.8" FontSize="32" Cursor="Hand" Click="BtnAnimation_Click" Content="Animation"/>
            <Button x:Name="BtnSlide" Content="&lt;" HorizontalAlignment="Right" Width="20" Margin="0" FontSize="20" FontWeight="Bold" Cursor="Hand" Click="BtnSlide_Click" Background="#FFF0DCC8"/>
        </Grid>
        <TabControl x:Name="TCBG" Margin="220,0,0,0" Background="#FF9E5252">
            <TabItem x:Name="TITable" Header="Table">
                <Grid x:Name="TIGTable" Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="TIEffect" Header="Effect">
                <Grid x:Name="TIGEffect" Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="TIParticle" Header="Particle">
                <Grid x:Name="TIGParticle" Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="TIAnimation" Header="Animation">
                <Grid x:Name="TIGAnimation" Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
