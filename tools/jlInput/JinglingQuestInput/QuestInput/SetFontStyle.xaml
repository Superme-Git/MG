<Window x:Class="QuestInput.SetFontStyle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SetFontStyle" Height="300" Width="300"
        xmlns:local="clr-namespace:QuestInput">
    <Grid>
        <ComboBox x:Name="fontCombox" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top" Width="89" Height="27" SelectionChanged="handleFontSelected" >
            <ComboBoxItem Content="simhei-10"/>
            <ComboBoxItem Content="simhei-12"/>
            <ComboBoxItem Content="simhei-13"/>
            <ComboBoxItem Content="simhei-14"/>
            <ComboBoxItem Content="simhei-16"/>
            <ComboBoxItem Content="simhei-18"/>
            <ComboBoxItem Content="simhei-20"/>
        </ComboBox>
        <local:Colorpicker x:Name="superCombo" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="162,55,0,0" />
        <Label Content="字体" HorizontalAlignment="Left" Margin="10,25,0,0" VerticalAlignment="Top"/>
        <Label Content="颜色" HorizontalAlignment="Left" Margin="162,25,0,0" VerticalAlignment="Top"/>
        <Button Content="确定" HorizontalAlignment="Left" Margin="90,175,0,0" VerticalAlignment="Top" Width="106" Height="32" Click="handleQDButtonClick"/>
    </Grid>
</Window>
