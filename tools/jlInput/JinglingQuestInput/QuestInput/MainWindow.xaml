<Window x:Class="QuestInput.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d ="http://schemas.microsoft.com/expression/blend/2008"
        Title="MainWindow" Height="797" Width="1000"
        xmlns:local="clr-namespace:QuestInput" Unloaded="Window_Unloaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="785*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="34*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="69*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="inputBox" HorizontalAlignment="Left" Height="99" Margin="13,137,0,0" VerticalAlignment="Top" Width="958" FontFamily="黑体" FontSize="12" Grid.ColumnSpan="8"/>
        <Button Content="链接-打开界面" HorizontalAlignment="Left" Margin="207,309,0,0" VerticalAlignment="Top" Width="121" Height="41" Click="handleInsertOpenDialogClick"/>
        <Button Content="链接-寻路至NPC" HorizontalAlignment="Left" Margin="342,309,0,0" VerticalAlignment="Top" Width="116" Height="41" Click="handleClickInsertGotoButton"/>
        <Button Content="链接-其他问题" HorizontalAlignment="Left" Margin="472,309,0,0" VerticalAlignment="Top" Width="120" Height="41" Click="handleRequestOtherQuest"/>
        <Button Content="添加文字" HorizontalAlignment="Left" Margin="4,247,0,0" VerticalAlignment="Top" Width="86" Height="40" Click="handleAddClick" RenderTransformOrigin="0.512,5.071" Grid.ColumnSpan="3" Grid.Column="5"/>

        <Button Content="设置方案" HorizontalAlignment="Left" Margin="107,40,-190,0" VerticalAlignment="Top" Width="94" Height="26" Click="handleSetFontStyleClick" RenderTransformOrigin="-1.997,-1.837" Grid.Column="8"/>
        <Label Content="输入框" HorizontalAlignment="Left" Margin="17,105,0,0" VerticalAlignment="Top" Width="53" Height="25"/>
        <Label Content="当前字体" HorizontalAlignment="Left" Margin="19,73,0,0" VerticalAlignment="Top" Height="25" Width="58"/>
        <TextBlock x:Name="tCurrentFont" HorizontalAlignment="Left" Margin="87,79,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="80" Height="15"/>
        <Label Content="当前颜色" HorizontalAlignment="Left" Margin="181,73,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.375,1" Height="25" Width="58"/>
        <TextBlock x:Name="tCurrentColor" HorizontalAlignment="Left" Margin="245,79,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="80" Height="15"/>
        <Button Content="换行" HorizontalAlignment="Left" Margin="117,309,0,0" VerticalAlignment="Top" Width="76" Height="41" Click="handleLineBreak" RenderTransformOrigin="0.395,5.012"/>
        <Button Content="删除上一段" HorizontalAlignment="Left" Margin="30,309,0,0" VerticalAlignment="Top" Width="75" Height="41" Click="handleRemoveLast"/>
        <Button Content="生成数据到剪贴板" HorizontalAlignment="Left" Margin="100,696,0,0" VerticalAlignment="Top" Width="114" Height="60" Click="handleCreateCEGUIStringValue"/>
        <ComboBox x:Name="tEmotionCombobox" HorizontalAlignment="Left" Margin="30,254,0,0" VerticalAlignment="Top" Width="106" Height="41" SelectedIndex="0">
        </ComboBox>
        <Button Content="插入表情" HorizontalAlignment="Left" Margin="151,256,0,0" VerticalAlignment="Top" Width="76" Height="41" Click="handleInsertEmotion"/>
        <Button Content="生成数据到文件" HorizontalAlignment="Left" Margin="245,696,0,0" VerticalAlignment="Top" Width="123" Height="60" Click="CreatFile_Click"/>
        <Label Content="预览：" HorizontalAlignment="Left" Margin="10,441,0,0" VerticalAlignment="Top" FontSize="20" Width="73" FontWeight="Bold" Height="35"/>
        <Label Content="生成：" HorizontalAlignment="Left" Margin="17,670,0,0" VerticalAlignment="Top" Width="62" Height="36" FontSize="20" FontWeight="Bold"/>
        <Label Content="输入操作：" HorizontalAlignment="Left" Margin="12,33,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Height="35" Width="110"/>
        <RadioButton Content="RadioButton" HorizontalAlignment="Left" Margin="542,75,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.524,0.464" Height="20" Width="100" GroupName="1" Name="m_rBtnColor1" Checked="m_rBtnColor1_Checked"/>
        <RadioButton Content="RadioButton" HorizontalAlignment="Left" Margin="647,75,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.524,0.464" Height="20" Width="100" GroupName="1" Name="m_rBtnColor2" Checked="m_rBtnColor2_Checked"/>
        <RadioButton Content="RadioButton" HorizontalAlignment="Left" Margin="752,75,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.524,0.464" Height="20" Width="100" Grid.ColumnSpan="5" GroupName="1" Name="m_rBtnColor3" Checked="m_rBtnColor3_Checked"/>
        <RadioButton Content="RadioButton" HorizontalAlignment="Left" Margin="7,75,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.524,0.464" Height="20" Width="100" Grid.ColumnSpan="3" Grid.Column="4" GroupName="1" Name="m_rBtnColor4" Checked="m_rBtnColor4_Checked"/>
        <RadioButton Content="RadioButton" HorizontalAlignment="Left" Margin="542,99,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.524,0.464" Height="20" Width="100" GroupName="2" Name="m_rBtnFont1" Checked="m_rBtnFont1_Checked"/>
        <RadioButton Content="RadioButton" HorizontalAlignment="Left" Margin="647,99,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.524,0.464" Height="20" Width="100" GroupName="2" Name="m_rBtnFont2" Checked="m_rBtnFont2_Checked"/>
        <RadioButton Content="RadioButton" HorizontalAlignment="Left" Margin="752,99,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.524,0.464" Height="20" Width="100" Grid.ColumnSpan="5" GroupName="2" Name="m_rBtnFont3" Checked="m_rBtnFont3_Checked"/>
        <RadioButton Content="RadioButton" HorizontalAlignment="Left" Margin="7,99,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.524,0.464" Height="20" Width="100" Grid.ColumnSpan="3" Grid.Column="4" GroupName="2" Name="m_rBtnFont4" Checked="m_rBtnFont4_Checked"/>
        <Button Content="Button" Name="m_BtnPhrase1" HorizontalAlignment="Left" Margin="30,363,0,0" VerticalAlignment="Top" Width="629" Height="29" Click="m_BtnPhrase1_Click"/>
        <Button Content="Button" Name="m_BtnPhrase2" HorizontalAlignment="Left" Margin="30,403,0,0" VerticalAlignment="Top" Width="629" Height="29" Click="m_BtnPhrase2_Click"/>
        <ScrollViewer Name ="scrollView" HorizontalAlignment="Left" Height="194" Margin="19,480,0,0" VerticalAlignment="Top" Width="954" Grid.ColumnSpan="8">
            <TextBlock x:Name="tShowText" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="800" Width="920"/>
        </ScrollViewer>
        <Button Name ="m_bgBtn1" Content="" HorizontalAlignment="Left" Margin="89,446,0,0" VerticalAlignment="Top" Width="35" Height="28" Click="m_bgBtn1_Click"/>
        <Button Name ="m_bgBtn2" Content="" HorizontalAlignment="Left" Margin="134,446,0,0" VerticalAlignment="Top" Width="35" Height="28" Click="m_bgBtn2_Click"/>
        <Button Name ="m_bgBtn3" Content="" HorizontalAlignment="Left" Margin="179,446,0,0" VerticalAlignment="Top" Width="35" Height="28" Click="m_bgBtn3_Click" />
        <Button x:Name ="m_bgBtn4" Content="" HorizontalAlignment="Left" Margin="223,446,0,0" VerticalAlignment="Top" Width="35" Height="28" Click="m_bgBtn4_Click" />

    </Grid>
</Window>
